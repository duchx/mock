<?xml version="1.0" encoding="UTF-8"?>
<!-- 
定义框架提供的公共工具包及服务
 -->
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
    default-autowire="byName"
    default-lazy-init="true">
        <bean id="cookieService"
		class="com.souche.optimus.security.cookie.CookieServiceImpl"
		autowire="byName"/>

    <bean id="cacheService" class="com.souche.optimus.cache.Memcached"
        init-method="init"/>

    <bean id="fileStorageRepository" class="com.souche.optimus.common.upload.FileStorageRepositoryAliyunImpl"
        init-method="init"/>
    
</beans>
